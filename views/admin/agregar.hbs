<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo testimonio</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Mascota" name="mascota">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Fecha" name="fecha">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Mensaje" name="mensaje" rows="8"></textarea>
                </div>
                <button type="submit" class="btn btn-secondary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>

</div>