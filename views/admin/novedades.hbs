<div class="row">
    <div class="col-7">
        <h3>Listado de Testimonios</h3>
    </div>
    <div class="col-2 text-end">
        <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>
            Nuevo</a>
    </div>
    <div class="col-2">
        <form class="d-flex" action="/admin/novedades" method="get">
            <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if
                q}}value="{{q}}" {{/if}}>
            <button class="btn btn-secondary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
        </form>
    </div>

</div>
