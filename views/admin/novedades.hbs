{{!-- fila 3 --}}
<div class="row table-form">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>

                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{nombre}} and his pet {{mascota}}</td>
                    <td class="text-end">
                        <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-secondary"><i
                                class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-secondary"><i
                                class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>

        {{#if is_search}}
            {{#unless novedades.lenght}}
                <p>No se encontraron resultados para "<strong>{{q}}</strong>"</p>
        {{/unless}}
        {{/if}}
    </div>
</div>

